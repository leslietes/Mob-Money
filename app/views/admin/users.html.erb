<h1>User List</h1>

<table id="users">
    <thead>
      <th>ID</th>
      <th>Email Address</th>
      <th>Surname</th>
      <th>First Name</th>
      <th>Second Name</th>
	  <th>Phone No</th>
      <th>Language</th>
      <th>Balance</th>
      <th>Type</th>
      <th>Deleted?</th>
      <th>Created By</th>
      <th>Created At</th>
      <th>Updated By</th>
      <th>Updated At</th>
      <th>Actions</th>
    </thead>
    <tbody>
      <% @users.each do |u| %>
      <tr>
        <td><%= u.id %></td>
        <td><%= u.email_address %></td>
        <td><%= u.surname %></td>
        <td><%= u.first_name %></td>
        <td><%= u.second_name %></td>
        <td>
            <% u.phone_numbers.each do |p| %>
                <%= p.phone_number %><br/>
            <% end %>
        </td>
        <td><%= u.language %></td>
        <td><%= number_to_currency(u.balance, :unit => '') %></td>
        <td><%= u.user_type %></td>
        <td><%= u.deleted %></td>
        <td><%= u.created_by_user %></td>
        <td><%= u.created_at %></td>
        <td><%= u.updated_by_user %></td>
        <td><%= u.updated_at %></td>
        <td>
            <%= link_to 'Show', user_url(u) %> |
            <%= link_to 'Edit', edit_user_url(u) %> | <%= link_to 'Delete', delete_user_url(u), :method => :post %>
        </td>
      </tr>
      <% end %>
    </tbody>
</table>
<br/>
<%= link_to 'New', new_user_url %> | <%= link_to 'Back', admin_url %>